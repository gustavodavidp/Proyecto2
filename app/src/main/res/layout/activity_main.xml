<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <fragment
        android:id="@+id/primer_Fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.example.proyecto2.Fragment_Primero"
        android:layout_weight="0.5"
        />
    <fragment
        android:id="@+id/segundo_Fragment"
        android:name="com.example.proyecto2.Fragment_Segundo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />
    <fragment
        android:id="@+id/tercer_Fragment"
        android:name="com.example.proyecto2.Fragment_Tercero"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />

</LinearLayout>